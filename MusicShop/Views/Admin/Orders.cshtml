@using MusicShop.Entities

@model IEnumerable<Order>

<h1>Customer Orders</h1>
<table>
    <thead>
        <tr>
            <th>Customer</th>
            <th>Email</th>
            <th>Instrument</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.Email</td>
                <td>@Html.ActionLink(order.Instrument?.Name, "Details", "Shop", new { id = order.Instrument.Id })</td>
                <td>@order.OrderDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
