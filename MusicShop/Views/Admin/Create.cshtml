@model InstrumentModel

<h1>Add Instrument</h1>
<form asp-action="Create" method="post">
    <label>Name: <input asp-for="Name" required /></label><br />
    <label>Description: <textarea asp-for="Description" required></textarea></label><br />
    <label>Price: <input asp-for="Price" type="number" step="0.01" required /></label><br />
    <label>Image URL: <input asp-for="ImageUrl" required /></label><br />
    <button type="submit">Create</button>
</form>
