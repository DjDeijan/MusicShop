@model List<InstrumentModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Instruments</h1>

<div class="grid">
    @foreach (var item in Model)
    {
        <div class="card">
            <img src="@item.ImageUrl" alt="@item.Name" />
            <div class="card-content">
                <h3>@item.Name</h3>
                    <div class="text-warning small">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= item.AverageRating)
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else if (i - 0.5m <= item.AverageRating)
                            {
                                <i class="bi bi-star-half"></i>
                            }
                            else
                            {
                                <i class="bi bi-star"></i>
                            }
                        }
                        <span class="text-muted">(@item.ReviewCount reviews)</span>
                </div>
                <p class="price">$@item.Price</p>
                <a class="btn btn-success" href="@Url.Action("Details", "Shop", new { id = item.Id })">
                    View Details
                </a>
            </div>
        </div>
    }
</div>
