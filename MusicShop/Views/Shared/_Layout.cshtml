@using MusicShop.Data
@{
    bool isAuthenticated = User.Identity?.IsAuthenticated == true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Music Shop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/site.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <a href="/">Music Shop</a>
            </div>
            <div class="nav-links">
                @Html.ActionLink("Shop", "Index", "Shop")
                @if (!isAuthenticated)
                {
                    @Html.ActionLink("Register", "Register", "Account")
                    @Html.ActionLink("Login", "Login", "Account")
                }
                @if (isAuthenticated)
                {
                    if (User.IsInRole(UserRoles.Admin))
                    {
                        <div class="dropdown-toggle" id="adminDropdown" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                            Admin
                        </div>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminDropdown">
                            <li>@Html.ActionLink("Edit Inventory", "Index", "Admin", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Orders", "Orders", "Admin", null, new { @class = "dropdown-item" })</li>
                        </ul>
                    }
                    @Html.ActionLink("Logout", "Logout", "Account")
                }
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>© 2025 Music Shop</p>
    </footer>
</body>
</html>
